@using ArticleManagement.BL.Domain.Extensions
@model ScientificArticle


<h2>Article Details</h2>
<div class="container-fluid">
    <div class="row">
        <span class="col-lg-1 fw-bold">Title</span>
        <p class="col-lg-8">@Model.Title</p>
    </div>
    <div class="row">
        <span class="col-lg-1 fw-bold"># Pages</span>
        <p class="col-lg-8">@Model.NumberOfPages</p>
    </div>
    <div class="row">
        <span class="col-lg-1 fw-bold">Genre</span>
        <p class="col-lg-8">@Model.Category.GetString()</p>
    </div>
    <div class="row">
        <span class="col-lg-1 fw-bold">Published</span>
        <p class="col-lg-8">@Model.DateOfPublication.ToString("MMM dd, yyyy") in <a asp-controller="ScienceJournal" asp-action="Index">@(Model.Journal?.Name ?? "UNKNOWN")</a> </p>
    </div>
</div>
<h3>Authors</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th></th>
        <th>Lead Researcher?</th>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Affiliation</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.AuthorLinks.Any())
    {
        int rowNumber = 1;
        foreach (var asLk in @Model.AuthorLinks)
        {
            <tr>
                <th>@(rowNumber++ + ".")</th>
                <td>@(asLk.IsLeadResearcher ? "Yes" : "No")</td>
                <td>@asLk.Scientist.Name</td>
                <td>@(asLk.Scientist.DateOfBirth.HasValue ? asLk.Scientist.DateOfBirth.Value.ToString("MMM dd, yyyy") : "UNKNOWN")</td>
                <td>Faculty of @asLk.Scientist.Faculty, @asLk.Scientist.University</td>
                <td>
                    <a asp-controller="Scientist" asp-action="Details" asp-route-id="@asLk.Scientist.Id">Details</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>